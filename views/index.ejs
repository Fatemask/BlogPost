<%- include ('partials/header') %>

<div class="ui main text container">
    <div class="ui huge header">Restful Blog App</div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blog.forEach(function(blog){ %>
                    <div class="item">
                        <div class="image">
                            <img style="width:50%" src="<%=blog.image%>">
                        </div>
                        <div class="content">
                            <a class="header" href="/blog/<%=blog._id%>"><%=blog.title%></a>
                            <div class="meta">
                                <span><%=blog.created.toDateString()%></span>
                            </div>
                            <div class="description">
                                <p><%-blog.body.substr(0,100)%> ...</p>
                            </div>
                            <div>
                               <a class="ui floated basic violet button" href="/blog/<%=blog._id%>">Read More
                               <i class="right chevron icon"></i>
                               </a>
                            </div>
                        </div>
                    </div>
                <% }); %>      
            </div>
        </div>
    </div>
</div>


<%- include ('partials/footer') %>
