<%- include ('partials/header') %>

<div class="ui main text container segment">
    <div class="ui centered huge header"><%=blog.title%></div>
        <div class="ui top attached">
            <div class="item">
                   <img class="ui centered rounded image" src="<%= blog.image%>" >
                   <div class="content">
                      <%= blog.created.toDateString()%>
                   </div>
                   <div class="description">
                     <p><%-blog.body%></p> 
                   </div>
                   <a href="/blog/<%=blog._id%>/edit" class="ui orange basic button" >EDIT</a>
                   <form id="delete" action="/blog/<%=blog._id%>?_method=DELETE" method="POST">
                       <button class="ui red basic button">DELETE</button>
                   </form>
            </div>
        </div>
</div>

<%- include ('partials/header') %>
